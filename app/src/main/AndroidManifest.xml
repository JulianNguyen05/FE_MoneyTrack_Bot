<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ht.nguyenhuutrong.fe_moneytrack_bot">
    <!-- Quyền truy cập Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FE_MoneyTrack_Bot"
        tools:targetApi="31">
        <activity
            android:name=".activities.WalletActivity"
            android:exported="false" />
        <!-- Activity đăng nhập (Launcher) -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Activity chính -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" /> <!-- Activity quản lý danh mục -->
        <activity
            android:name=".activities.CategoryActivity"
            android:exported="false" /> <!-- Activity đăng ký -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />
    </application>

</manifest>